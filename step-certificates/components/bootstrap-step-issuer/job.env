# Step CA configuration (must match bootstrap-pvc/job.env)
CA_URL=https://step-certificates.step-ca.svc.cluster.local
CA_PROVISIONER_NAME=default-jwk

# StepIssuer configuration
STEPISSUER_NAME=step-issuer
STEPISSUER_NAMESPACE=step-ca

# Paths in PVC
STEPPATH=/home/step
ROOT_CA_CERT_PATH=${STEPPATH}/certs/root_ca.crt
CA_CONFIG_PATH=${STEPPATH}/config/ca.json
PROVISIONER_PASSWORD_PATH=${STEPPATH}/secrets/certificate-issuer/password

# Kubernetes configuration
SECRET_NAME=step-certificates-provisioner-password
SECRET_KEY=password
